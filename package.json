{
  "name": "express-ts-typeorm",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node build/src/main.js",
    "start:dev": "nodemon src/main.ts",
    "build": "tsc -p tsconfig.json",
    "migration:create": "typeorm migration:create ./src/config/database/migrations/$npm_config_name",
    "migration:up": "cross-var typeorm migration:run -d ./build/src/config/database/datasource.js",
    "migration:down": "cross-var typeorm migration:revert -d ./build/src/config/database/datasource.js",
    "seed:up": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d ./build/src/config/database/datasource.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "cross-var": "^1.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.6.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "nodemon": "^3.1.4",
    "typescript": "^5.5.4"
  }
}
